<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-12">
    <h1><%= @user.first_name %>'s Profile</h1>
  </div>
<div class="col-md-6">
 <% unless @user.photo_url.nil? %>
   <img src= <%= @user.photo_url %> class="img-circle" width="350" height="350">
  <% end %>
</div>

<div class="col-md-6">
<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @user.age %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @user.gender %>
</p>

<p>
  <strong>Family info:</strong>
  <%= @user.family_info %>
</p>

<p>
  <strong>Pet info:</strong>
  <%= @user.pet_info %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Residence info:</strong>
  <%= @user.residence_info %>
</p>

<p>
  <strong>About:</strong>
  <%= @user.about %>
</p>
<% if @user.id == current_user.id %>
<%= link_to 'Edit', edit_user_path(@user),class: "btn btn-default"  %> 
<% end %>

</div>
</div>


