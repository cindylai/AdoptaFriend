

<div class="container">
<div id = "animalform">
<h2> Put an animal up for adoption </h2>
<%= simple_form_for(@animal) do |f| %>
  <%= f.error_notification %>


  	<%= f.input :name %>
  	<%= f.input :breed %>
  	<%= f.input :age %>
  	<%= f.input :parent_breed %>
  	<%= f.input :personality %>
  	<%= f.input :adoption_fee %>
    <%= f.input :note %>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
</div>
</div>

<% end %>