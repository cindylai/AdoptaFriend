<h1>Listing animals</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Name</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Parent breed</th>
      <th>Personality</th>
      <th>Adoption fee</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.user_id %></td>
        <td><%= animal.date %></td>
        <td><%= animal.name %></td>
        <td><%= animal.breed %></td>
        <td><%= animal.age %></td>
        <td><%= animal.parent_breed %></td>
        <td><%= animal.personality %></td>
        <td><%= animal.adoption_fee %></td>
        <td><%= animal.note %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

